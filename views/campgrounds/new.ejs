
<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align:center"> Create a New Campground</h1>
    <div style="width:30%;margin:25px auto">
    <form action="/campgrounds" method="POST">
        <div class="form-group">
        <input class="form-control" type="text" placeholder="name" name="campname">
        </div>
        <div class="form-group">
        <input class="form-control" type="number" placeholder="price per night" min="0.01" step="0.01" name="campprice">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" placeholder="image" name="campimage">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" placeholder="description" name="campdesc">
        </div>
        <div class="form-group">
        <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
        </div>
    </form>
    <a href="/campgrounds">Go Back</a>
</div>
<% include ../partials/footer %>